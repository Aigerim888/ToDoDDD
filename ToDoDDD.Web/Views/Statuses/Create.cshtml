@using ToDoDDD.DAL.Entitities
@model Status
@{
    ViewData["Title"] = "Cоздать статус";
}
<h2>Создать статус</h2>
<div class="row">
    <div class="col-md-6"> 
        <form asp-action="Create" asp-controller="Statuses" method="post">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="form-text text-danger"></span>
            <button type="submit" class="btn btn-success">Создать</button>
        </form>
        <p>
            <a asp-action="Index">Назад к списку</a>
        </p>
    </div>
</div>